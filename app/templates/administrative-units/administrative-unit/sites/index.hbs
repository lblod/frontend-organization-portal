<div class="au-o-box">
  <AuToolbar>
    <AuToolbarGroup>
      <AuHeading>
        Vestigingen
      </AuHeading>
    </AuToolbarGroup>
    <AuToolbarGroup>
      {{! TODO: Replace this with a link once the "new" route is created }}
      <AuButton @icon="add" @iconAlignment="left">
        Nieuw
      </AuButton>
    </AuToolbarGroup>
  </AuToolbar>
  <AuHeading @level="2" @skin="3" class="au-u-margin-top-tiny">
    {{@model.administrativeUnit.name}}
  </AuHeading>
</div>

<AuDataTable @content={{this.sites}} @noDataMessage="Geen vestigingen" as |t|>
  <t.content as |c|>
    <c.header>
      <th class="au-c-data-table__header-title">Locatie</th>
      <th class="au-c-data-table__header-title">Vestigingstype</th>
      <th class="au-c-data-table__header-title">Primair correspondentieadres </th>
      <th></th>
    </c.header>
    <c.body as |site|>
      <td>
        <AuLink @model={{site.id}} @route="administrative-units.administrative-unit.sites.site">
          {{site.address.fullAddress}}
        </AuLink>
      </td>
      <td>{{site.siteTypes.label}}</td>
      <td>{{if (eq site.id this.model.primarySite.id) "Ja" "NeeN"}}</td>
      <td>
        <AuLink @route="administrative-units.administrative-unit.sites">Bewerk</AuLink>
      </td>
    </c.body>
  </t.content>
</AuDataTable>