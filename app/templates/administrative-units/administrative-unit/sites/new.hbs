<div class="au-c-body-container au-c-body-container--scroll">
  <div class="au-o-box au-o-flow au-o-flow--large">
    <PageHeader>
      <:title>Voeg vestiging toe</:title>
    </PageHeader>

    <form
      id="new-vestiging-form"
      {{on "submit" (perform this.createSiteTask)}}
    >
      <div class="au-o-flow au-o-flow--large">
        <EditCard>
          <:title>Kerngegevens</:title>
          <:card as |Card|>
            <Card.Grid as |Item|>
              <Item>
                <:label>Type vestiging</:label>
                <:content>
                  <SiteTypeSelect
                    @selected={{@model.site.siteType}}
                    @onChange={{fn (mut @model.site.siteType)}}
                  />
                </:content>
              </Item>
              <Item>
                <:label>Primair correspondentieadres</:label>
                <:content>
                  <ul class="au-c-list-inline">
                    <li class="au-c-list-inline__item">
                      <AuControlRadio
                        @label="Ja"
                        @name="is-primary-site"
                        @value={{this.isPrimarySite}}
                        @identifier="site-true"
                        @onChange={{fn (mut this.isPrimarySite) true}}
                        checked={{this.isPrimarySite}}
                      />
                    </li>
                    <li class="au-c-list-inline__item">
                      <AuControlRadio
                        @label="Nee"
                        @name="is-primary-site"
                        @value={{this.isPrimarySite}}
                        @identifier="site-false"
                        @onChange={{fn (mut this.isPrimarySite) false}}
                        checked={{not this.isPrimarySite}}
                      />
                    </li>
                  </ul>
                </:content>
              </Item>
            </Card.Grid>
          </:card>
        </EditCard>

        <EditCard>
          <:title>Contactgegevens</:title>
          <:card as |Card|>
            <Card.Grid as |Item|>
              <Item @labelFor="site-address-street-name">
                <:label>Straat</:label>
                <:content>
                  <AuInput
                    @value={{@model.address.street}}
                    @width="block"
                    id="site-address-street-name"
                  />
                </:content>
              </Item>
              <Item @labelFor="site-address-house-number">
                <:label>Huisnummer</:label>
                <:content>
                  <AuInput
                    @value={{@model.address.number}}
                    @width="block"
                    id="site-address-house-number"
                  />
                </:content>
              </Item>
              <Item @labelFor="site-address-bus-number">
                <:label>Busnummer</:label>
                <:content>
                  <AuInput
                    @value={{@model.address.boxNumber}}
                    @width="block"
                    id="site-address-bus-number"
                  />
                </:content>
              </Item>
              <Item @labelFor="site-address-postal-code">
                <:label>Postcode</:label>
                <:content>
                  <AuInput
                    @value={{@model.address.postcode}}
                    @width="block"
                    id="site-address-postal-code"
                  />
                </:content>
              </Item>
              <Item>
                <:label>Gemeente</:label>
                <:content>
                  <MunicipalitySelect
                    @selected={{this.model.address.municipality}}
                    @onChange={{fn
                      (mut this.model.address.municipality)
                    }}
                  />
                </:content>
              </Item>
              <Item>
                <:label>Provincie</:label>
                <:content>
                  <ProvinceSelect
                    @selected={{this.model.address.province}}
                    @onChange={{fn
                      (mut this.model.address.province)
                    }}
                  />
                </:content>
              </Item>
              <Item @labelFor="site-contact-phone-number">
                <:label>Telefoonnummer</:label>
                <:content>
                  <AuInput
                    @value={{@model.contact.telephone}}
                    @width="block"
                    id="site-contact-phone-number"
                  />
                </:content>
              </Item>
              <Item @labelFor="site-contact-website">
                <:label>Website</:label>
                <:content>
                  <AuInput
                    @value={{@model.contact.website}}
                    @width="block"
                    id="site-contact-website"
                  />
                </:content>
              </Item>
            </Card.Grid>
          </:card>
        </EditCard>

        <AuButtonGroup>
          <AuButton
            @disabled={{this.createSiteTask.isRunning}}
            type="submit"
          >
            Voeg toe
          </AuButton>

          <AuLink
            @route="administrative-units.administrative-unit.sites"
            @skin="button-secondary"
          >
            Annuleer
          </AuLink>
        </AuButtonGroup>
      </div>
    </form>
  </div>
</div>