<div class={{if @error "ember-power-select--error"}}>
  <PowerSelect
    @allowClear={{true}}
    @loadingMessage="Aan het laden..."
    @noMatchesMessage="Geen resultaten"
    @searchEnabled={{true}}
    @searchMessage="Typ om te zoeken"
    @searchField="label"
    @options={{this.loadMandateRolesTask.last}}
    @selected={{this.selectedMandateRole}}
    @onChange={{@onChange}}
    @triggerId={{@id}}
    as |mandateRole|
  >
    {{mandateRole.label}}
  </PowerSelect>
</div>