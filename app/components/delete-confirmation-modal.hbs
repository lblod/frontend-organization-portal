<AuModal @modalOpen={{true}} @closeModal={{@onCancel}}>
  <:title>Bevestig</:title>
  <:body>Weet je zeker dat je de relatie
    {{#if (eq @membership.member.id @organizationId)}}
      "{{@membership.member.abbName}}
      {{@membership.role.opLabel}}
      {{@membership.organization.abbName}}"
    {{else}}
      "{{@membership.organization.abbName}}
      {{@membership.role.inverseOpLabel}}
      {{@membership.member.abbName}}"
    {{/if}}
    wilt verwijderen?
  </:body>
  <:footer>
    <AuToolbar as |Group|>
      <Group />
      <Group>
        <AuButton
          @skin="secondary"
          @icon="bin"
          @iconAlignment="left"
          {{on "click" @onCancel}}
        >Nee</AuButton>
        <AuButton {{on "click" (fn @onConfirm @membership)}}>Ja</AuButton>
      </Group>
    </AuToolbar>
  </:footer>
</AuModal>