<header ...attributes>
  {{#if (has-block "action")}}
    <AuToolbar>
      <AuToolbarGroup>
        <AuHeading>
          {{yield to="title"}}
        </AuHeading>
      </AuToolbarGroup>
      <AuToolbarGroup>
        {{yield to="action"}}
      </AuToolbarGroup>
    </AuToolbar>
  {{else if (has-block "alert")}}
    <AuToolbar>
      <AuToolbarGroup>
        <AuHeading>
          {{yield to="title"}}
        </AuHeading>
      </AuToolbarGroup>
      <AuToolbarGroup>
        {{yield to="alert"}}
      </AuToolbarGroup>
    </AuToolbar>
  {{else}}
  <AuHeading>
    {{yield to="title"}}
  </AuHeading>
  {{/if}}
  {{#if (has-block "subtitle")}}
    <AuHeading @level="2" @skin="3" class="au-u-margin-top-tiny">
      {{yield to="subtitle"}}
    </AuHeading>
  {{/if}}
</header>