<DataCard>
  <:title>
    {{yield to="title"}}
  </:title>
  <:infotext>
    {{yield to="infotext"}}
  </:infotext>
  <:card as |Card|>
    <Card.Columns>
      <:left as |Item|>
        {{#if @address.fullAddress}}
          <Item>
            <:label>Adres</:label>
            <:content>
              {{@address.fullAddress}}
            </:content>
          </Item>
        {{/if}}
        {{#if @address.province}}
          <Item>
            <:label>
              Provincie
              <AuIcon @icon="circle-question" />
              <EmberTooltip @text="Kies een Vlaamse provincie of het Brussels Hoofdstedelijk gewest" />
            </:label>
            <:content>
              {{@address.province}}
            </:content>
          </Item>
        {{/if}}
      </:left>
      <:right as |Item|>
        {{#if @primaryContact.telephone}}
          <Item>
            <:label>Primair telefoonnummer</:label>
            <:content>
              {{tel-format @primaryContact.telephone}}
            </:content>
          </Item>
        {{/if}}
        {{#if @secondaryContact.telephone}}
          <Item>
            <:label>Secundair telefoonnummer</:label>
            <:content>
              {{tel-format @secondaryContact.telephone}}
            </:content>
          </Item>
        {{/if}}
        {{#if @primaryContact.email}}
          <Item>
            <:label>E-mail</:label>
            <:content>
              {{@primaryContact.email}}
            </:content>
          </Item>
        {{/if}}
        {{#if @primaryContact.website}}
          <Item>
            <:label>Website</:label>
            <:content>
              <AuLinkExternal href={{@primaryContact.website}}>
                {{@primaryContact.website}}
                (externe link)
              </AuLinkExternal>
            </:content>
          </Item>
        {{/if}}
      </:right>
    </Card.Columns>
  </:card>
</DataCard>