<div class={{if @error "ember-power-select--error"}}>
  <PowerSelect
    @loadingMessage="Aan het laden..."
    @searchField='label'
    @options={{this.loadChangeEventTypesTask.last}}
    @selected={{@selected}}
    @onChange={{@onChange}}
    @triggerId={{@id}}
    as |type|
  >
    {{type.label}}
  </PowerSelect>
</div>
